<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Nationality</th>
      <th>Especialidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.birthdate %></td>
        <td><%= author.nationality %></td>
        <td><%= author.category.name %></td>
        <td><%= link_to 'Show', author, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-sm btn-secondary'  %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-xl btn-success' %>
